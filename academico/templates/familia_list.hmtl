{% extends "base.html" %}
{%block content%}
<h1>Lista de Familias</h1>
<ul>
    {% for familia in familias %}
        <li>
            <a href="{% url 'familias:familia_update' familia.pk %}">{{ familia.Nombre_Familia }}</a>
            <a href="{% url 'familias:familia_delete' familia.pk %}" class="btn btn-danger">Eliminar</a>
        </li>
    {% endfor %}
</ul>
<a href="{% url 'familias:familia_create' %}" class="btn btn-primary">Agregar Familia</a>
{%endblock%}